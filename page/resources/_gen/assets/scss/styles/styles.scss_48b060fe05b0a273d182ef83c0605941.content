body{color:#454545;font-size:14px;padding:0;margin:0}h1,h2,h3,h4,h5,h6{color:#000;font-family:poppins,sans-serif}input{color:#b4b4b4;font-family:poppins,sans-serif;font-weight:700;font-size:11px;outline-style:none;box-shadow:none}input::placeholder{color:#b4b4b4;font-family:poppins,sans-serif;font-weight:700;font-size:11px}.center{width:1170px;margin:0 auto}a{color:#454545;font-family:inherit}.header__title{border-bottom:1px solid #ebebeb;margin-top:49px;padding:40px 0;text-align:center}.menu{background:#fff;border:1px solid #ebebeb;position:fixed;top:0;z-index:10;width:100%}.menu__list{list-style:none;position:relative;padding:0;margin:0;display:inline-block}.menu__item{display:inline-block}.menu__item:hover ul{opacity:1;visibility:visible}.menu .pl>li:last-child>a>span:first-child,.menu .en>li:last-child>a>span:first-child{background-size:contain;display:inline-block;height:13px;width:25px;vertical-align:middle;box-shadow:1px 1px 10px 0 rgba(0,0,0,.2);margin-right:5px}.menu .pl>li:last-child>a>span:first-child{background-image:url(/images/flagUsa.png)}.menu .en>li:last-child>a>span:first-child{background-image:url(/images/flagPoland.png)}.menu__submenu{position:absolute;overflow:visible;visibility:hidden;display:block;list-style:none;opacity:0;padding:0;background:#fff;border:1px solid #ebebeb;transition:all .25s ease-in;z-index:110}.menu__subItem{border-bottom:1px solid #ebebeb;min-width:240px;max-width:350px}.menu__subItem:last-child{border-bottom:0}.menu__link{display:inline-block;font-family:poppins,sans-serif;text-transform:uppercase;text-decoration:none;padding:0 21px;line-height:48px;font-weight:700;font-size:11px;transition:color .25s ease-in;vertical-align:middle}.menu__link:hover{color:#318892}.menu__arrow{display:inline-block;box-sizing:border-box;height:5px;width:5px;border-style:solid;border-color:#454545;border-width:0 1px 1px 0;transform:rotate(45deg);margin:-5px 0 0 8px;vertical-align:middle}.search{float:right}.search__input{border:0;padding:4px 6px;margin-top:12px;transition:width .3s ease-in;width:60px}.search__input:focus{width:150px}.search__button{border:0;padding-right:0}.search__button:hover{cursor:pointer}